<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/schedule_duration" />

        <ToggleButton
            android:id="@+id/toggleButton1"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:checked="true"
            android:paddingBottom="-20dp"
            android:textOff="@string/schedule_weekly"
            android:textOn="@string/schedule_monthly"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/schedule_start_day"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/schedule_start_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:editable="false"
        android:fadingEdge="horizontal"
        android:focusable="false"
        android:inputType="date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/schedule_end_day"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/schedule_end_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:editable="false"
        android:ems="10"
        android:fadingEdge="horizontal"
        android:focusable="false"
        android:inputType="date" />

    <EditText
        android:id="@+id/schedule_total_budget"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:hint="@string/schedule_budget"
        android:inputType="number" />

    <ListView
        android:id="@+id/schedule_item_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>