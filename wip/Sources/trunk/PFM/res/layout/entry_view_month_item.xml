<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:baselineAligned="false" >

        <!--
             LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
        -->


        <!--
                 LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/entry_list_item"
            android:layout_gravity="bottom"
            android:contentDescription="@string/image_icon_description"
            android:src="@drawable/combobox_icon" />

        <TextView
            android:id="@+id/entry_view_month_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:text="@string/dummy_data"
            android:textColor="@color/white_text_color"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/entry_view_month_item_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:gravity="right"
            android:text="@string/dummy_data"
            android:textColor="@color/white_text_color"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/entry_view_month_stacked_bar_chart"
        android:layout_width="fill_parent"
        android:layout_height="12sp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#7991" />
    <!--
    /LinearLayout>

        < TextView
            android:id="@+id/entry_view_month_count"
            android:layout_width="30dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:drawableBottom="@drawable/collapsed"
            android:text="@string/dummy_data"
            android:textColor="@color/white_text_color"
            android:textSize="17dp" >
        </TextView >
    </LinearLayout
    -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@color/white_text_color_transparent" />

    <LinearLayout
        android:id="@+id/entry_view_week_item_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" />

</LinearLayout>