<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/app_background"
    android:clipChildren="false" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- Sycnhronization>>>>> -->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:background="@drawable/title_background" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:text="@string/sync_view_title"
                android:textColor="@color/white_text_color"
                android:textSize="18dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="@color/white_text_color_transparent"
            android:gravity="left|center_vertical"
            android:text="@string/sync_view_setting_title"
            android:textColor="@color/white_text_color"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="@string/sync_view_auto_sync"
                    android:textColor="@color/white_text_color"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="@string/sync_view_auto_sync_description"
                    android:textColor="@color/white_text_color"
                    android:textSize="15dp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/sync_auto_checkbox"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:button="@drawable/checkbox_selector" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_text_color_transparent" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="1"
                android:text="@string/sync_view_account_management"
                android:textColor="@color/white_text_color"
                android:textSize="16dp" />

            <Button
                android:id="@+id/sync_new_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/add_new_icon"
                android:onClick="addNewAccount" />
        </LinearLayout>

        <TextView
            android:id="@+id/sync_no_data"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_data"
            android:textColor="@color/white_text_color"
            android:textSize="18dp" />

        <LinearLayout
            android:id="@+id/sync_view_account_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" />
        <!-- <<<< Synchronization -->


        <!-- Warning >>>> -->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:background="@drawable/title_background" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:text="@string/warning_title"
                android:textColor="@color/white_text_color"
                android:textSize="18dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="@color/white_text_color_transparent"
            android:gravity="left|center_vertical"
            android:text="@string/warning_schedule_title"
            android:textColor="@color/white_text_color"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:baselineAligned="false"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:text="@string/warning_schedule_warn_before"
                    android:textColor="@color/white_text_color"
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/warning_schedule_warn_before"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="4"
                    android:paddingBottom="-10dp"
                    android:paddingTop="-10dp"
                    android:textColor="@color/white_text_color"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:text="@string/warning_ring"
                    android:textColor="@color/white_text_color"
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/warning_schedule_ring"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="4"
                    android:textColor="@color/white_text_color"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:text="@string/warning_remain"
                    android:textColor="@color/white_text_color"
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/warning_schedule_remain"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="4"
                    android:textColor="@color/white_text_color"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_gravity="left|center_vertical"
            android:background="@color/white_text_color_transparent"
            android:text="@string/warning_borrow_title"
            android:textColor="@color/white_text_color"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:baselineAligned="false"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:text="@string/warning_borrow_warn_before"
                    android:textColor="@color/white_text_color"
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/warning_borrow_warn_before"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="4"
                    android:textColor="@color/white_text_color"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:text="@string/warning_ring"
                    android:textColor="@color/white_text_color"
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/warning_borrow_ring"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="4"
                    android:textColor="@color/white_text_color"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:text="@string/warning_remain"
                    android:textColor="@color/white_text_color"
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/warning_borrow_remain"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="4"
                    android:textColor="@color/white_text_color"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- <<<< Warning -->
    </LinearLayout>

</ScrollView>