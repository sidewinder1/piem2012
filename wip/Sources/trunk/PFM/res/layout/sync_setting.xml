<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- Sycnhronization -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_background" >

        <TextView
            style="@style/HeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="10sp"
            android:text="@string/menu_settings" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main_content_background" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="50sp"
            android:clipChildren="false" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    style="@style/normalText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/sync_view_setting_title"
                    android:textSize="21sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15sp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/note_budget"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginBottom="20sp"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/normalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="10sp"
                            android:text="@string/sync_view_auto_sync"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/normalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="20sp"
                            android:text="@string/sync_view_auto_sync_description" />
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/sync_auto_checkbox"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:button="@drawable/checkbox_selector" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_margin="15sp"
                    android:background="@color/brown_line" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/normalText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/sync_view_account_management"
                        android:textSize="21sp" />

                    <Button
                        android:id="@+id/sync_new_button"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/add_new_icon"
                        android:onClick="addNewAccount" />
                </LinearLayout>

                <TextView
                    android:id="@+id/sync_no_data"
                    style="@style/normalText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:text="@string/no_data" />

                <LinearLayout
                    android:id="@+id/sync_view_account_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" />
<!-- <<<< Synchronization -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_margin="15sp"
                    android:background="@color/brown_line" />

 <!-- Warning >>>> -->

                <TextView
                    style="@style/normalText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/warning_title"
                    android:textSize="21sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15sp"
                    android:background="@drawable/note_budget"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/normalText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:gravity="left|center_vertical"
                        android:text="@string/warning_schedule_title"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:baselineAligned="false"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                style="@style/normalText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="5"
                                android:gravity="center_vertical"
                                android:text="@string/warning_schedule_warn_before" />

                            <RelativeLayout
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="4" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="bottom"
                                    android:contentDescription="@string/image_icon_description"
                                    android:src="@drawable/spinner_right" />

                                <Spinner
                                    android:id="@+id/warning_schedule_warn_before"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|bottom"
                                    android:background="@drawable/spinner_bottom"
                                    android:textColor="@color/white_text_color"
                                    android:textSize="18sp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <!-- LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/normalText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="5"
                                android:gravity="center_vertical"
                                android:text="@string/warning_ring" />

                            <RelativeLayout
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="4" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="bottom"
                                    android:contentDescription="@string/image_icon_description"
                                    android:src="@drawable/spinner_right" />

                                <Spinner
                                    android:id="@+id/warning_schedule_ring"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|bottom"
                                    android:layout_marginLeft="15dp"
                                    android:background="@drawable/spinner_bottom"
                                    android:textColor="@color/white_text_color"
                                    android:textSize="18sp" />
                            </RelativeLayout>
                        </LinearLayout -->

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_marginBottom="20sp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/normalText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="5"
                                android:gravity="center_vertical"
                                android:text="@string/warning_remain" />

                            <RelativeLayout
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="4" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="bottom"
                                    android:contentDescription="@string/image_icon_description"
                                    android:src="@drawable/spinner_right" />

                                <Spinner
                                    android:id="@+id/warning_schedule_remain"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|bottom"
                                    android:layout_marginLeft="15dp"
                                    android:background="@drawable/spinner_bottom"
                                    android:textColor="@color/white_text_color"
                                    android:textSize="18sp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15sp"
                    android:orientation="vertical"
                    android:background="@drawable/note_budget" >

                    <TextView
                        style="@style/normalText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:gravity="left|center_vertical"
                        android:text="@string/warning_borrow_title"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:baselineAligned="false"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/normalText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="5"
                                android:gravity="center_vertical"
                                android:text="@string/warning_borrow_warn_before" />

                            <RelativeLayout
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="4" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="bottom"
                                    android:contentDescription="@string/image_icon_description"
                                    android:src="@drawable/spinner_right" />

                                <Spinner
                                    android:id="@+id/warning_borrow_warn_before"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|bottom"
                                    android:layout_marginLeft="15dp"
                                    android:background="@drawable/spinner_bottom"
                                    android:textColor="@color/white_text_color"
                                    android:textSize="18sp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/normalText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="5"
                                android:gravity="center_vertical"
                                android:text="@string/warning_ring" />

                            <RelativeLayout
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="4" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="bottom"
                                    android:contentDescription="@string/image_icon_description"
                                    android:src="@drawable/spinner_right" />

                                <Spinner
                                    android:id="@+id/warning_borrow_ring"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|bottom"
                                    android:layout_marginLeft="15dp"
                                    android:background="@drawable/spinner_bottom"
                                    android:textColor="@color/white_text_color"
                                    android:textSize="18sp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/normalText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="5"
                                android:gravity="center_vertical"
                                android:text="@string/warning_remain" />

                            <RelativeLayout
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="4" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="bottom"
                                    android:contentDescription="@string/image_icon_description"
                                    android:src="@drawable/spinner_right" />

                                <Spinner
                                    android:id="@+id/warning_borrow_remain"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|bottom"
                                    android:layout_marginLeft="15dp"
                                    android:background="@drawable/spinner_bottom"
                                    android:textColor="@color/white_text_color"
                                    android:textSize="18sp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- <<<< Warning -->
        </ScrollView>
    </LinearLayout>

</LinearLayout>