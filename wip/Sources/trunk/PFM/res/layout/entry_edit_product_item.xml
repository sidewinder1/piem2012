<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
       
        <EditText
            android:id="@+id/entry_edit_product_name"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="2dp"
            android:maxLength="25"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:hint="@string/entry_product_name_hint"
            android:textSize="16dp" >
        </EditText>

        <EditText
            android:id="@+id/entry_edit_product_price"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="2dp"
            android:maxLength="12"
            android:layout_marginRight="2dp"
            android:hint="@string/entry_price_hint"
            android:layout_weight="3"
            android:gravity="bottom"
            android:inputType="numberDecimal"
            android:textSize="16dp" />

        <Button
            android:id="@+id/entry_edit_product_item_add"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="top"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0"
            android:background="@drawable/small_add_button" />

        <Button
            android:id="@+id/entry_edit_product_remove"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="top"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0"
            android:background="@drawable/small_delete_button" />
</LinearLayout>