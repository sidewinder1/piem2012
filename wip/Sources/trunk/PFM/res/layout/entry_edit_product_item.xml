<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp" >

    <Button
        android:id="@+id/entry_edit_product_remove"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="top"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="15dp"
        android:layout_weight="0"
        android:background="@drawable/minus_icon" />

    <EditText
        android:id="@+id/entry_edit_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        android:layout_weight="5"
        android:background="@drawable/spinner_bottom"
        android:gravity="center_vertical"
        android:hint="@string/entry_product_name_hint"
        android:maxLength="25"
        android:textSize="18sp" >
    </EditText>

    <EditText
        android:id="@+id/entry_edit_product_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_weight="3"
        android:background="@drawable/spinner_bottom"
        android:digits="0123456789"
        android:gravity="center"
        android:hint="@string/entry_price_hint"
        android:inputType="number"
        android:maxLength="12"
        android:textSize="16dp" />

    <Button
        android:id="@+id/entry_edit_product_item_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="0"
        android:background="@drawable/plus_icon" />

</LinearLayout>