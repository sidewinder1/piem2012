<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/report_category_legend_color_item"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/report_category_legend_item_name"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/dummy_data"
                android:textColor="@color/white_text_color" />

            <ImageView
                android:id="@+id/report_collapsed_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:contentDescription="@string/image_icon_description"
                android:src="@drawable/combobox_icon" />

        <TextView
            android:id="@+id/report_category_legend_item_percent"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="@string/dummy_data"
            android:textColor="@color/white_text_color" />

        <TextView
            android:id="@+id/report_category_legend_item_value"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical"
            android:text="@string/dummy_data"
            android:textColor="@color/white_text_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/report_category_pie_chart_ledgend_sub_item"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content" />

</LinearLayout>