<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
	    <LinearLayout android:layout_width="20dp"
	        android:layout_height="10dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="10dp"
	        android:layout_gravity="center_vertical|center_horizontal"
	        android:id="@+id/report_category_legend_color_item"/>
	    <LinearLayout 
	        android:layout_width="170dp"
	        android:layout_height="25dp"
	        android:gravity="center_vertical">

		    <TextView
		        android:id="@+id/report_category_legend_item_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/dummy_data"
		        android:textColor="@color/white_text_color" />

		    <Button
	            android:id="@+id/report_collapsed_button"
	        	android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:layout_centerVertical="true"
	            android:layout_toRightOf="@+id/report_category_legend_item_name"
	            android:drawableBottom="@drawable/combobox_icon"/>
	    </LinearLayout>
	    <TextView android:layout_width="40dp"
	        android:layout_height="30dp"
	        android:gravity="center_vertical"
	        android:id="@+id/report_category_legend_item_percent"
	        android:textColor="@color/white_text_color"/>
	    <TextView android:layout_width="80dp"
	        android:layout_height="30dp"
	        android:gravity="center_vertical"
	        android:id="@+id/report_category_legend_item_value"
	        android:textColor="@color/white_text_color"/>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/report_category_pie_chart_ledgend_sub_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />"
</LinearLayout>