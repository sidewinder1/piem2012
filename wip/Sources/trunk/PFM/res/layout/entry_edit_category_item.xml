<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/entry_item_add"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0"
            android:background="@drawable/plus_icon" />
       
        <Spinner
            android:id="@+id/entry_item_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="7"
            android:background="@drawable/spinner_bottom"
            android:gravity="center_vertical" />
          <EditText
            android:id="@+id/entry_item_category_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLength="25"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:background="@drawable/spinner_bottom"
            android:hint="@string/schedule_new_category"
            android:textColor="@color/white_text_color"
            android:textSize="16dp"
            android:visibility="gone" >
        </EditText>
        <ImageView android:src="@drawable/spinner_right"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:contentDescription="@string/image_icon_description"/>

        <TextView
            android:id="@+id/entry_item_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textColor="@color/white_text_color"
            android:layout_weight="6"
            android:gravity="bottom"
            android:textSize="18sp" />

        <Button
            android:id="@+id/entry_item_remove"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0"
            android:background="@drawable/minus_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/entry_edit_category_list"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content" />
</LinearLayout>