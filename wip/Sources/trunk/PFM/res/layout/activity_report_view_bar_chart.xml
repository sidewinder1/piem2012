<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:baselineAligned="false"
    android:orientation="vertical" >
   
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
        android:background="@drawable/title_background_2">

        <TextView
            android:id="@+id/report_bar_chart_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="@string/dummy_data"
            android:textColor="@color/white08"
            android:textSize="23sp"
            android:textStyle="bold" />
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main_content_background"
        android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
        android:orientation="vertical">
	        
	    <LinearLayout
	        android:id="@+id/report_bar_chart"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:id="@+id/report_bar_chart_detail"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
	    </LinearLayout>
    </LinearLayout>
</LinearLayout>