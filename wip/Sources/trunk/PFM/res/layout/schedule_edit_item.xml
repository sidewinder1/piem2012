<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/schedule_item_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="25sp"
        android:layout_weight="0"
        android:background="@drawable/minus_icon" />
    
    <Spinner
        android:id="@+id/schedule_item_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_weight="7"
        android:background="@drawable/spinner_bottom"
        android:gravity="center_vertical" />

    <EditText
        android:id="@+id/schedule_item_category_edit"
        style="@style/normalEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        android:layout_weight="7"
        android:background="@drawable/spinner_bottom"
        android:gravity="center_vertical"
        android:hint="@string/schedule_new_category"
        android:visibility="gone" >
    </EditText>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:contentDescription="@string/image_icon_description"
        android:src="@drawable/spinner_right" />

    <EditText
        android:id="@+id/schedule_item_price"
        style="@style/normalEditNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="2dp"
        android:layout_weight="6"        
        android:gravity="bottom" />

    <Button
        android:id="@+id/schedule_item_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="10sp"
        android:layout_weight="0"
        android:background="@drawable/plus_icon" />
    

</LinearLayout>