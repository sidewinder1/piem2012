<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <Spinner
        android:id="@+id/schedule_item_category"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <EditText
        android:inputType="numberDecimal"
        android:id="@+id/schedule_item_price"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/schedule_item_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/small_add_button" />

    <Button
        android:id="@+id/schedule_item_remove"
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:background="@drawable/small_delete_button"/>

</LinearLayout>