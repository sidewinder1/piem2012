<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@color/blue_background"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/entry_detail_category_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:text="@string/dummy_data"
            android:textColor="@color/white_text_color" />

        <TextView
            android:id="@+id/entry_detail_category_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/entry_detail_category_item_name"
            android:text="@string/dummy_data"
            android:textColor="@color/white_text_color" />

        <TextView
            android:id="@+id/entry_detail_category_item_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:text="@string/dummy_data"
            android:textColor="@color/white_text_color" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/white_text_color" />

    <LinearLayout
        android:id="@+id/entry_detail_category_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>