<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:weightSum="4" >

            <ImageView
                android:id="@+id/entry_detail_expanded_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:contentDescription="@string/image_icon_description"
                android:src="@drawable/combobox_icon" />

            <TextView
                android:id="@+id/entry_detail_category_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_data"
                android:textColor="@color/white_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/entry_detail_category_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_token"
                android:textColor="@color/white_text_color"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/entry_detail_category_item_total"
            android:layout_width="0dip"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="@string/dummy_data"
            android:textColor="@color/white_text_color"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/brown_line" />

    <LinearLayout
        android:id="@+id/entry_detail_category_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:orientation="vertical"
        android:visibility="gone" />

</LinearLayout>