<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/no_data_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:text="@string/no_data"
        android:textColor="@color/white_text_color" />

    <ListView
        android:id="@+id/tab_content_view_list"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <ScrollView
        android:id="@+id/entry_view_scroll"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:clipChildren="false" >

        <LinearLayout
            android:id="@+id/entry_tab_content_view_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/note"
        android:id="@+id/tab_content_view_note"
        android:textSize="18sp"
        android:textColor="@color/white_text_color"
        android:layout_gravity="center" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:layout_weight="0" >

        <LinearLayout
            android:id="@+id/chart_legend"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|fill_vertical"
            android:layout_margin="10sp"
            android:minHeight="80dp"
            android:orientation="vertical" />
    </ScrollView>

</LinearLayout>